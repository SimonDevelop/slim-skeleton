{
  "name": "simondevelop/slim-skeleton",
  "description": "Simple skeleton slim 3 with middlewares tokens/csrf",
  "keywords": [
    "template",
    "slim"
  ],
  "homepage": "https://github.com/SimonDevelop/slim-skeleton",
  "license": "MIT",
  "authors": [
    {
      "name": "SimonDevelop",
      "email": "contact@simon-micheneau.fr"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/src/"
    }
  },
  "autoload-dev": {
      "psr-4": {
          "Tests\\": "tests/"
      }
  },
  "require": {
    "php": ">=5.5",
    "slim/slim": "^3.9",
    "slim/php-view": "^2.0",
    "slim/csrf": "^0.8.2",
    "squizlabs/php_codesniffer": "^3.2"
  },
  "require-dev": {
      "phpunit/phpunit": "^7.2.3"
  },
  "config": {
        "process-timeout" : 0
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public public/index.php",
    "phpunit": "phpunit --colors",
    "phpcs": "phpcs -s",
    "test": [
      "@phpunit",
      "@phpcs"
    ]
  }
}
