{
  "name": "simondevelop/slim-skeleton",
  "description": "Simple skeleton slim 4 with middlewares token/csrf",
  "keywords": [
    "template",
    "slim",
    "csrf",
    "token"
  ],
  "homepage": "https://github.com/SimonDevelop/slim-skeleton",
  "license": "MIT",
  "authors": [
    {
      "name": "SimonDevelop",
      "email": "contact@simon-micheneau.fr"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "ext-json": "*",
    "php": ">=7.1",
    "slim/slim": "^4.2",
    "slim/psr7": "^0.5",
    "php-di/php-di": "^6.0",
    "slim/csrf": "^1.0",
    "slim/php-view": "^2.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.2",
    "phpunit/phpunit": "^7.5"
  },
  "config": {
    "process-timeout" : 0
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public public/index.php",
    "phpunit": "phpunit --colors",
    "phpcs": "phpcs -s",
    "test": [
      "@phpcs",
      "@phpunit"
    ]
  }
}
